<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Edge-to-edge rendering can be found on theme.xml(v29)-->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/org_circles_blue</item>
        <item name="colorPrimaryVariant">@color/org_circles_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/org_circles_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorError">@color/red_dark</item>
        <item name="colorOnError">@color/red_dark</item>

        <!-- Custom styles -->
        <item name="toolbarNavigationButtonStyle">@style/Widget.Circles.ToolbarNavigationButton</item>
        <item name="titleTextStyle">@style/TextAppearance.Circles.ToolbarTitle</item>
        <item name="toolbarStyle">@style/Widget.Circles.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.Circles.Button</item>

    </style>

</resources>
