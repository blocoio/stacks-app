<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ToolBars -->
    <style name="Widget.Circles.ToolbarNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Widget.Circles.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Circles.ToolbarTitle</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Circles.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Circles.ButtonText</item>
    </style>

    <style name="Widget.Circles.ButtonOnPrimaryColor" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/org_circles_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.Circles.ButtonText</item>
    </style>

    <style name="Widget.Circles.AlternativeButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/org_circles_light1_blue</item>
        <item name="android:textColor">@color/org_circles_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.Circles.ButtonText</item>
    </style>

    <!-- BottomSheet -->
    <style name="CirclesBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CirclesBottomSheetStyle</item>
    </style>

    <style name="CirclesBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Others-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
