<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ToolBars -->
    <style name="Widget.Stacks.ToolbarNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Widget.Stacks.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Stacks.ToolbarTitle</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Stacks.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="Widget.Stacks.ButtonOnPrimaryColor" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/org_stacks_blue</item>
    </style>

    <style name="Widget.Stacks.AlternativeButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/org_stacks_light1_blue</item>
        <item name="android:textColor">@color/org_stacks_blue</item>
    </style>

    <!-- Others-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.2</item>
    </style>


</resources>
